{
    "name": "abdelrhmansaid/validator",
    "description": "PHP Validator",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/AbdelrhmanSaid/php-validator/issues",
        "source": "https://github.com/AbdelrhmanSaid/php-validator"
    },
    "keywords": ["validator"],
    "autoload": {
        "psr-4": {
            "Validator\\": "./src"
        }
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "phpstan/phpstan": "^1.6",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "phpstan": "./vendor/bin/phpstan analyse src -l 9"
    }
}
